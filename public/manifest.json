{
  "manifest_version": 3,
  "name": "Gistflow â€“ Smart Page Summarizer",
  "version": "0.1.0",
  "description": "TL;DR, key points, action notes, and context-aware actions with on-device AI + Gemini fallback.",
  "action": { 
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/gistflow_logo.png",
      "32": "icons/gistflow_logo.png",
      "48": "icons/gistflow_logo.png",
      "128": "icons/gistflow_logo.png"
    }
  },
  "icons": {
    "16": "icons/gistflow_logo.png",
    "32": "icons/gistflow_logo.png",
    "48": "icons/gistflow_logo.png",
    "128": "icons/gistflow_logo.png"
  },
  "options_page": "src/options/index.html",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "contextMenus"],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [],
  "commands": {
    "toggle-sidebar": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Open/Close sidebar"
    },
    "open-chat": {
      "suggested_key": { "default": "Alt+C" },
      "description": "Open Chat view"
    },
    
    "toggle-side": {
      "suggested_key": { "default": "Alt+L" },
      "description": "Toggle Left/Right"
    }
  }
}
